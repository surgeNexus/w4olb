<% include ../partials/header %>

<div class="row">
    <div class="col-md-4">
        <h1> <%= user.username %></h1>
        <h2> <%= user.firstName + " " + user.lastName %></h2>
        <div class="thumbnail">
            <img src="<%= user.profileImage %>" alt="User Profile Image">
        

            <div class="caption well">
            <% if(user.isMember === false){ %>
                <p>User information available only to members</p>
            <% } else { %>
                <ul>
                    <li class="glyphicon glyphicon-envelope"><a href="mailto:<%= user.email %>"><%= user.email %></a></li>
                    <li class="glyphicon glyphicon-earphone"><a href="tel:<%= user.phone %>"><%= user.phone %></a></li>
                </ul>
            <% } %>
            </div>

            <div class="container form-center"></div>
            <p class="well">
                <%= user.profileInfo %>
            </p>
        </div>
        
        <a href="/users/<%= user.id %>/edit"><button type="button" class="btn btn-danger">Edit Profile</button></a>
    </div>

    <div class="col-md-8 user-show-market">
        <h3> For Sale by <%= user.username %></h3>
        <div class="col-md-3 user-show-market">
            <% campgrounds.forEach(function(campground) { %>    
                <a href="/radiomarket/<%= campground.id %>" class="thumbnail">
                    <img class="thumbnail" src="<%= campground.image %>" alt="<%= campground.name %>"><%= campground.name %>
                </a>
            <% }) %>
        </div>
    </div>
</div>

<% include ../partials/footer %>